@model UserLoginViewModel
@{
    ViewData["Title"] = "Login";
}

<section class="breadcrumb-section">
    <h2 class="sr-only">Site Breadcrumb</h2>
    <div class="container">
        <div class="breadcrumb-contents">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Account</a></li>
                    <li class="breadcrumb-item active">Login</li>
                </ol>
            </nav>
        </div>
    </div>
</section>
<!--=============================================
=            Login Register page content         =
=============================================-->
<main class="page-section inner-page-sec-padding-bottom">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-sm-12 col-md-12 col-lg-8 col-xs-12">
                <form asp-action="login" method="post">
                    <div class="login-form">
                        <h4 class="login-title">Login</h4>
                        <p><span class="font-weight-bold">I am a user</span></p>
                        <div class="row">
                            <div class="col-md-12 col-12 mb--15">
                                <label asp-for="UserName">UserName</label>
                                <input asp-for="UserName" class="mb-0 form-control">
                                <span class="text-danger" asp-validation-for="UserName"></span>
                            </div>
                            <div class="col-12 mb--20">
                                <label asp-for="Password">Password</label>
                                <input asp-for="Password" class="mb-0 form-control">
                                <span class="text-danger" asp-validation-for="Password"></span>
                            </div>
                            <div class="col-12 mb--20">
                                <a asp-action="forgotpassword" asp-controller="account">Forgot password</a>
                            </div>
                            <div class="col-12 mb--20">
                                <div class="check-box">
                                    <input type="checkbox" asp-for="RememberMe">
                                    <label asp-for="RememberMe">Remember me</label>
                                </div>
                            </div>
                            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-outlined">Login</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</main>

@section Scripts{
    @Html.Partial("_ValidationScriptsPartial")
}


