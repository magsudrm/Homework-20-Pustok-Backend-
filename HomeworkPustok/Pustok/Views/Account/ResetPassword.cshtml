@model UserResetPasswordViewModel
@{
    ViewData["Title"] = "Reset password";
}

<section class="breadcrumb-section">
    <h2 class="sr-only">Site Breadcrumb</h2>
    <div class="container">
        <div class="breadcrumb-contents">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Account</a></li>
                    <li class="breadcrumb-item active">Register</li>
                </ol>
            </nav>
        </div>
    </div>
</section>
<!--=============================================
=            Register page content         =
=============================================-->
<main class="page-section inner-page-sec-padding-bottom">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-sm-12 col-md-12 col-xs-12 col-lg-8 mb--30 mb-lg--0">
                <form method="post" asp-action="ResetPassword">
                    <div class="login-form">
                        <h4 class="login-title">Reset Password</h4>
                        <div class="row">

                            <div class="col-md-12 col-12 mb--15">
                                <label for="email">Password</label>
                                <input class="mb-0 form-control" asp-for="Password">
                                <span class="text-danger" asp-validation-for="Password"></span>
                            </div>
                            <div class="col-md-12 col-12 mb--15">
                                <label for="email">ConfirmPassword</label>
                                <input class="mb-0 form-control" asp-for="ConfirmPassword">
                                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                            </div>
                            <input type="hidden" name="Email" value="@TempData["Email"]" />
                            <input type="hidden" name="Token" value="@TempData["Token"]" />

                            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-outlined">Register</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</main>

@section Scripts{
    @Html.Partial("_ValidationScriptsPartial")
}